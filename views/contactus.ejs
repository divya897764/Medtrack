<section class="contact" style="background-color: #ffffff; color: #111; font-family: 'Segoe UI', sans-serif; padding: 60px 0;">
    <div class="container" style="max-width: 1100px; margin: auto; padding: 0 20px;">
        
        <!-- Section Title -->
        <div class="section-title" style="text-align: center; margin-bottom: 50px;">
            <h2 style="color: #FFC107; font-size: 36px; margin-bottom: 10px;">Get In Touch</h2>
            <p style="font-size: 18px; color: #444;">We'd love to hear from you about how we can improve your healthcare experience.</p>
        </div>
        
        <!-- Content Layout -->
        <div class="contact-content" style="display: flex; flex-wrap: wrap; gap: 50px;">
            
            <!-- Contact Info -->
            <div class="contact-info" style="flex: 1; min-width: 300px;">
                <h3 style="color: #FFC107; font-size: 24px; margin-bottom: 20px;">Contact Information</h3>
                <p><strong>Email:</strong> <a href="mailto:info@medtrack.com" style="color: #111;">info@medtrack.com</a></p>
                <p><strong>Phone:</strong> <a href="tel:8005551234" style="color: #111;">(800) 555-1234</a></p>
                <p><strong>Address:</strong> 123 Healthcare Way, San Francisco, CA 94107</p>
                <p><strong>Hours:</strong> Monday–Friday, 9am–5pm PST</p>
            </div>

            <!-- Contact Form -->
            <div class="contact-form" style="flex: 1; min-width: 300px;">
                <form>
                    <div class="form-group" style="margin-bottom: 20px;">
                        <label for="name" style="display: block; margin-bottom: 6px; font-weight: 500;">Name</label>
                        <input type="text" id="name" name="name" required
                               style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px;">
                    </div>
                    <div class="form-group" style="margin-bottom: 20px;">
                        <label for="email" style="display: block; margin-bottom: 6px; font-weight: 500;">Email</label>
                        <input type="email" id="email" name="email" required
                               style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px;">
                    </div>
                    <div class="form-group" style="margin-bottom: 20px;">
                        <label for="message" style="display: block; margin-bottom: 6px; font-weight: 500;">Message</label>
                        <textarea id="message" name="message" required rows="5"
                                  style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px;"></textarea>
                    </div>
                    <button type="submit"
                            style="background-color: #FFC107; color: #111; border: none; padding: 14px 28px; font-size: 16px; font-weight: bold; border-radius: 6px; cursor: pointer;">
                        Send Message
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
